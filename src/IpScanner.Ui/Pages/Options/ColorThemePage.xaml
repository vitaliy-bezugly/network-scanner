<Page
    x:Class="IpScanner.Ui.Pages.Options.ColorThemePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <ComboBox x:Uid="SelectTheme" MinWidth="250" SelectedValuePath="Tag" SelectedValue="{x:Bind ViewModel.SelectedTheme, Mode=TwoWay}">
            <ComboBoxItem x:Uid="Light" Tag="Light"></ComboBoxItem>
            <ComboBoxItem x:Uid="Dark" Tag="Dark"></ComboBoxItem>
            <ComboBoxItem x:Uid="Default" Tag="Default"></ComboBoxItem>
        </ComboBox>
    </Grid>
</Page>
