<Page
    x:Class="IpScanner.Ui.Pages.Options.PerformancePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <StackPanel>
        <CheckBox x:Uid="HighAccuracy" IsChecked="{x:Bind ViewModel.HighAccuracy, Mode=TwoWay}"/>
        
        <TextBlock x:Uid="ScanningSpeed" />
        <Slider Minimum="1" Maximum="50" StepFrequency="5" Value="{x:Bind ViewModel.ScanningSpeed, Mode=TwoWay}"/>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="0" x:Uid="SlowScanning" />
            <TextBlock Grid.Column="1" x:Uid="FastScanning" TextAlignment="Right"/>
        </Grid>

        <Button x:Uid="Save" Style="{StaticResource AccentButtonStyle}" Margin="0, 10" MinWidth="150"
                Command="{x:Bind ViewModel.SaveCommand}"/>
    </StackPanel>
</Page>
